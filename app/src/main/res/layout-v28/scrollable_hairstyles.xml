<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".fragments.EditFragment">

    <!-- Here you put the rest of your current view-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/editBarTV"
            android:layout_width="600dp"
            android:layout_height="25dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="2dp"
            android:text="@string/hairstyleheader"
            android:textAlignment="center"
            android:textColor="@color/colorFontWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:contentDescription="Side Part Fade"
            android:id="@+id/sidepartfadeimg"
            android:layout_width="291dp"
            android:layout_height="305dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/pointfivefadetext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sidepartfadetext"
            app:srcCompat="@drawable/sideparthaircut" />

        <TextView
            android:id="@+id/sidepartfadetext"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            android:text="@string/sidepartfade"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/sidepartfadeimg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />

        <ImageView
            android:contentDescription="0.5 Fade"
            android:id="@+id/pointfivefadeimg"
            android:layout_width="289dp"
            android:layout_height="270dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bowlcuttext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pointfivefadetext"
            app:srcCompat="@drawable/pointfivefade" />

        <TextView
            android:id="@+id/pointfivefadetext"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="@string/pointfivefade"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/pointfivefadeimg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sidepartfadeimg"
            app:layout_constraintVertical_bias="0.803" />

        <TextView
            android:id="@+id/bowlcuttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="@string/bowlcut"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/bowlcutimg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pointfivefadeimg"
            app:layout_constraintVertical_bias="0.083" />

        <ImageView
            android:contentDescription="Bowl Cut"
            android:id="@+id/bowlcutimg"
            android:layout_width="276dp"
            android:layout_height="351dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/afromantext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bowlcuttext"
            app:srcCompat="@drawable/bowlcut" />

        <TextView
            android:id="@+id/afromantext"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="@string/afrohaircut"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/afromanimg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bowlcutimg" />

        <ImageView
            android:contentDescription="Afro"
            android:id="@+id/afromanimg"
            android:layout_width="269dp"
            android:layout_height="369dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/afromantext"
            app:srcCompat="@drawable/afroman" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>